    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@junobuild/config": "^1.0.1",
    "@junobuild/nextjs-plugin": "^4.1.2",
    "@types/node": "^24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "^15.3.4",
    "postcss": "^8",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "typescript": "^5"
